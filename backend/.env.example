# Breakpoint LLM Stress Testing Platform - Environment Configuration

# =================================================================
# APPLICATION SETTINGS
# =================================================================
APP_NAME="Breakpoint LLM Stress Testing Platform"
APP_VERSION="1.0.0"
ENVIRONMENT="development"  # development, staging, production
DEBUG=true

# =================================================================
# SERVER CONFIGURATION
# =================================================================
HOST="0.0.0.0"
PORT=8000
WORKERS=1
RELOAD=true

# =================================================================
# DATABASE CONFIGURATION
# =================================================================
DATABASE_URL="sqlite:///./breakpoint.db"
# For PostgreSQL: postgresql+asyncpg://user:password@localhost/breakpoint
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_ECHO=false

# =================================================================
# REDIS CONFIGURATION (Optional)
# =================================================================
# REDIS_URL="redis://localhost:6379"
# REDIS_PASSWORD=""
# REDIS_DB=0
# REDIS_TTL=3600

# =================================================================
# LLM PROVIDER API KEYS
# =================================================================
# OpenAI Configuration
OPENAI_API_KEY="your_openai_api_key_here"
# OPENAI_ORG_ID="your_org_id_here"
OPENAI_BASE_URL="https://api.openai.com/v1"
OPENAI_MAX_RETRIES=3
OPENAI_TIMEOUT=60

# Anthropic Configuration
ANTHROPIC_API_KEY="your_anthropic_api_key_here"
ANTHROPIC_BASE_URL="https://api.anthropic.com"
ANTHROPIC_MAX_RETRIES=3
ANTHROPIC_TIMEOUT=60

# HuggingFace Configuration
HUGGINGFACE_API_KEY="your_huggingface_token_here"
HUGGINGFACE_BASE_URL="https://api-inference.huggingface.co"
HUGGINGFACE_MAX_RETRIES=3
HUGGINGFACE_TIMEOUT=120

# =================================================================
# CORS CONFIGURATION
# =================================================================
CORS_ORIGINS="http://localhost:3000,http://127.0.0.1:3000,https://yourdomain.com"
CORS_METHODS="GET,POST,PUT,DELETE,OPTIONS,PATCH"
CORS_HEADERS="*"
CORS_CREDENTIALS=true

# =================================================================
# SECURITY CONFIGURATION
# =================================================================
JWT_SECRET_KEY="your-super-secret-jwt-key-change-this-in-production"
JWT_ALGORITHM="HS256"
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Password Security
PASSWORD_HASH_ROUNDS=12
SESSION_TIMEOUT=3600
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900

# =================================================================
# FILE UPLOAD CONFIGURATION
# =================================================================
MAX_FILE_SIZE=52428800  # 50MB in bytes
ALLOWED_FILE_EXTENSIONS=".txt,.json,.csv,.xlsx,.pdf"
UPLOAD_DIRECTORY="./uploads"

# =================================================================
# RATE LIMITING
# =================================================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_BURST=20
RATE_LIMIT_WINDOW=60

# =================================================================
# WEBSOCKET CONFIGURATION
# =================================================================
WEBSOCKET_MAX_CONNECTIONS=100
WEBSOCKET_TIMEOUT=300
WEBSOCKET_HEARTBEAT_INTERVAL=30

# =================================================================
# LOGGING CONFIGURATION
# =================================================================
LOG_LEVEL="INFO"  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"
# LOG_FILE="./logs/breakpoint.log"
LOG_ROTATION="midnight"
LOG_RETENTION=30
STRUCTURED_LOGGING=false

# =================================================================
# EMAIL/NOTIFICATION CONFIGURATION (Optional)
# =================================================================
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT=587
# SMTP_USERNAME="your_email@gmail.com"
# SMTP_PASSWORD="your_email_password"
# SMTP_TLS=true
# EMAIL_FROM="noreply@breakpoint.ai"

# =================================================================
# PERFORMANCE CONFIGURATION
# =================================================================
REQUEST_TIMEOUT=30
CONNECTION_POOL_SIZE=20
CONNECTION_POOL_MAXSIZE=50
RETRY_ATTEMPTS=3
RETRY_BACKOFF_FACTOR=1.0

# =================================================================
# DATA RETENTION
# =================================================================
TEST_RESULT_RETENTION_DAYS=90
LOG_RETENTION_DAYS=30
REPORT_RETENTION_DAYS=365
CACHE_TTL=3600

# =================================================================
# FEATURE FLAGS
# =================================================================
ENABLE_CACHING=true
ENABLE_RATE_LIMITING=true
ENABLE_WEBSOCKETS=true
ENABLE_BACKGROUND_TASKS=true
ENABLE_METRICS=true
ENABLE_TRACING=false

# =================================================================
# MONITORING AND ANALYTICS
# =================================================================
METRICS_ENDPOINT="/metrics"
HEALTH_CHECK_ENDPOINT="/health"
MONITORING_ENABLED=true
ANALYTICS_ENABLED=false

# =================================================================
# API CONFIGURATION
# =================================================================
API_V1_PREFIX="/api/v1"
DOCS_URL="/docs"
REDOC_URL="/redoc"
OPENAPI_URL="/openapi.json"
